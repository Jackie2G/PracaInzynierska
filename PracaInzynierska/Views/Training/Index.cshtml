@model PracaInzynierska.Models.Exercises

<link href=https://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.4/themes/excite-bike/jquery-ui.css rel="stylesheet" />
<br />
<div class="container row p-0 m-0">
    <div class="col-3">
        <label>Date:  </label>
        <input type="date" id="date" />
    </div>
    <div class="col-3">
        <button type="button" class="btn btn-info text-white" id="GetDate">Show</button>
    </div>
    <div class="w-100"></div>
    <div class="w-100"></div>
    <br />
    <div class="col-3">
        <label asp-for="Name" Exercise:>
            <select asp-for="Name" class="form-control"
                    asp-items="@ViewBag.listofExercises" id="exercise">
                <option value="">Select exercise from</option>
            </select>
        </label>
    </div>
    <div class="col-3">
        <button type="button" class="btn btn-info text-white" id="GetExercise">Show</button>
    </div>
    <div class="w-100"></div>
    <div class="w-100"></div>
    <br />
    <div class="col-3">
        <label>Date from:  </label>
        <input type="date" id="dateFrom"/>
    </div>
    <div class="col-3">
        <label>Date to:  </label>
        <input type="date" id="dateTo"/>
    </div>
    <div class="col-3">
        <button type="button" class="btn btn-info text-white" id="GetDataBetween">Show</button>
    </div>
    <div class="w-100"></div>
    <div class="w-100"></div>
    <br />
    <div class="col-6">
        <h2 class="text-info">Training List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="UpsertExercise" asp-controller="Training" class="btn btn-info form-control text-white">
            Add new exercise
        </a>
    </div>
    <br />
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Sets</th>
                    <th>Reps</th>
                    <th>Weight</th>
                    <th>Done</th>
                    <th>Description</th>
                    <th>Current Pr</th>
                    <th>Options</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{ 
    <script src="~/js/TrainingList.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
}