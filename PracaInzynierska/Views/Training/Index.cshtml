@model PracaInzynierska.Models.Exercises

<link href=https://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.4/themes/excite-bike/jquery-ui.css rel="stylesheet" />
<br />
<div class=" col-12 row  ranking-box">
    <div class="col-12 form-group row pb-2">
        <label class="col-sm-2 col-form-label">Date:  </label>
        <div class="col-sm-5">
            <input type="date" id="date" class="form-control" />
        </div>
        <div class="col-sm-5">
            <button type="button" class="btn btn-info text-white" id="GetDate">Show</button>
        </div>
    </div>
    <div class="col-12 form-group row pb-2 ">
        <label class="col-sm-2 col-form-label">Exercise:  </label>
        <div class="col-sm-5">
            <select asp-for="Name" class="form-control"
                    asp-items="@ViewBag.listofExercises" id="exercise">
                <option value="">Select exercise from</option>
            </select>
        </div>
        <div class="col-sm-5">
            <button type="button" class="btn btn-info text-white" id="GetExercise">Show</button>
        </div>
    </div>
    <div class="col-8 form-group row pb-5 ">
        <label class="col-sm-3 col-form-label">Date from:  </label>
        <div class="col-sm-7">
            <input type="date" id="dateFrom" class="form-control" />
        </div>
        <br>
        <label class="col-sm-3 col-form-label">Date to:  </label>
        <div class="col-sm-7">
            <input type="date" id="dateTo" class="form-control" />
        </div>
        <div class="col-sm-2">
            <button type="button" class="btn btn-info text-white" id="GetDataBetween">Show</button>
        </div>
    </div>
    <div class="col-6">
        <h2 class="text-info">Training List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="UpsertExercise" asp-controller="Training" class="btn btn-info form-control text-white">
            Add new exercise
        </a>
    </div>
    <br />
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered table-responsive col-11">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Series</th>
                    <th>Reps</th>
                    <th>Weight</th>
                    <th>Done</th>
                    <th>Description</th>
                    <th>Current Pr</th>
                    <th>Options</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/TrainingList.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
}