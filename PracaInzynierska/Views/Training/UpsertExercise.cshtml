@model PracaInzynierska.Models.Exercises

<br />
<h2 class="text-info">@(Model.ID != null ? "Edit" : "Create") Exercise</h2>
<br />

<div class="border containter" style="padding:30px;">
    <form method="post">
        @if (Model.ID != null)
        {
            <input type="hidden" asp-for="ID" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="trainingHistory.Date" Date></label>
            </div>
            <div class="col-6">
                <input asp-for="trainingHistory.Date" class="form-control" />
                <span asp-validation-for="trainingHistory.Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Series"></label>
            </div>
            <div class="col-6">
                <input asp-for="Series" class="form-control" />
                <span asp-validation-for="Series" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Reps"></label>
            </div>
            <div class="col-6">
                <input asp-for="Reps" class="form-control" />
                <span asp-validation-for="Reps" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Weight"></label>
            </div>
            <div class="col-6">
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Done"></label>
            </div>
            <div class="col-1">
                <input asp-for="Done" class="form-control" />
                <span asp-validation-for="Done" class="text-danger"></span>
            </div>
        </div>
