@model PracaInzynierska.Models.Exercises

<br />
<h2 class="text-info">@(Model.ID != 0 ? "Edit" : "Create") Exercise</h2>
<br />

<div class="border ranking-box">
    <form method="post">
        @if (Model.ID != 0)
        {
            <input type="hidden" asp-for="ID" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        @if (Model.ID == 0)
        {
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="trainingHistory.Date" Date></label>
                </div>
                <div class="col-6">
                    <input asp-for="trainingHistory.Date" class="form-control" />
                    <span asp-validation-for="trainingHistory.Date" class="text-danger"></span>
                </div>
            </div>
        }
        <div class="form-group row">
            <div class="col-3">
                <label for="Series">Sets</label>
            </div>
            <div class="col-6">
                <input asp-for="Series" class="form-control" />
                <span asp-validation-for="Series" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Reps"></label>
            </div>
            <div class="col-6">
                <input asp-for="Reps" class="form-control" />
                <span asp-validation-for="Reps" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Weight"></label>
            </div>
            <div class="col-6">
                <input class="form-control input-validation-error" type="text" data-val="true" data-val-required="The Weight field is required." id="Weight" name="Weight" aria-describedby="Weight-error" aria-invalid="true">
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Done"></label>
            </div>
            <div class="col-1">
                <input asp-for="Done" class="form-control move-left"/>
                <span asp-validation-for="Done" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.ID != 0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to add new exercise</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
<partial name="_ValidationScriptsPartial" />
}